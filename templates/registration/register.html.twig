{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<section class="container mainSection">
    <h1>Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.username) }}
        {{ form_row(registrationForm.email) }}

        {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
    {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary mt-5">M'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-secondary mt-5">Me connecter</a>
        <a href="{{ path('forgotten_password') }}" class="btn btn-secondary mt-5">Mot de passe oubli√©</a>
    {{ form_end(registrationForm) }}


</section>
{% endblock %}
